# ================================================================
# PRODUCTION ENVIRONMENT - FRONTEND
# ================================================================
# Production environment variables for frontend deployment on Render
# Set these in Render dashboard environment variables

# ================================================================
# API CONFIGURATION
# ================================================================
VITE_API_URL=https://your-backend-service.onrender.com/api
VITE_API_VERSION=v1
VITE_ENABLE_API_LOGGING=false

# ================================================================
# APP CONFIGURATION
# ================================================================
VITE_APP_NAME=Smart Study Group Matcher
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Find your perfect study partners with intelligent matching
VITE_APP_URL=https://your-frontend-service.onrender.com

# ================================================================
# AUTHENTICATION & SECURITY
# ================================================================
VITE_TOKEN_STORAGE=localStorage
VITE_TOKEN_REFRESH_THRESHOLD=30
VITE_AUTO_LOGOUT=true

# ================================================================
# THEME & UI CONFIGURATION
# ================================================================
VITE_DEFAULT_THEME=system
VITE_PERSIST_THEME=true
VITE_ANIMATION_DURATION=300

# ================================================================
# FEATURE FLAGS
# ================================================================
VITE_ENABLE_REGISTRATION=true
VITE_ENABLE_GROUP_CREATION=true
VITE_ENABLE_MATCHING=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true

# ================================================================
# ANALYTICS & MONITORING
# ================================================================
# VITE_GA_TRACKING_ID=GA-XXXXXXXX-X
# VITE_SENTRY_DSN=https://your-sentry-dsn
VITE_ENABLE_ERROR_REPORTING=true

# ================================================================
# PRODUCTION ONLY
# ================================================================
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_REACT_QUERY_DEVTOOLS=false
VITE_ENABLE_DETAILED_ERRORS=false
VITE_MOCK_API=false