# ================================================================
# SMART STUDY GROUP MATCHER SYSTEM - FRONTEND ENVIRONMENT
# ================================================================
# This file contains all environment variables needed for the frontend
# Copy this file to .env and fill in the actual values

# ================================================================
# API CONFIGURATION
# ================================================================
# Backend API URL
# Development: http://localhost:3001/api
# Production: https://your-backend-service.onrender.com/api
VITE_API_URL=http://localhost:3001/api

# API version
VITE_API_VERSION=v1

# Enable API request logging in development
VITE_ENABLE_API_LOGGING=true

# ================================================================
# APP CONFIGURATION
# ================================================================
# Application name
VITE_APP_NAME=Smart Study Group Matcher

# Application version
VITE_APP_VERSION=1.0.0

# Application description
VITE_APP_DESCRIPTION=Find your perfect study partners with intelligent matching

# Application URL (for SEO and sharing)
VITE_APP_URL=http://localhost:5173

# ================================================================
# AUTHENTICATION & SECURITY
# ================================================================
# Token storage type (localStorage, sessionStorage, httpOnly)
VITE_TOKEN_STORAGE=localStorage

# Token refresh threshold in minutes
VITE_TOKEN_REFRESH_THRESHOLD=30

# Auto logout on token expiry
VITE_AUTO_LOGOUT=true

# ================================================================
# THEME & UI CONFIGURATION
# ================================================================
# Default theme (light, dark, system)
VITE_DEFAULT_THEME=system

# Enable theme persistence
VITE_PERSIST_THEME=true

# Animation duration in milliseconds
VITE_ANIMATION_DURATION=300

# ================================================================
# FEATURE FLAGS
# ================================================================
# Enable user registration
VITE_ENABLE_REGISTRATION=true

# Enable study group creation
VITE_ENABLE_GROUP_CREATION=true

# Enable matching service
VITE_ENABLE_MATCHING=true

# Enable dark mode toggle
VITE_ENABLE_DARK_MODE=true

# Enable notifications
VITE_ENABLE_NOTIFICATIONS=true

# ================================================================
# ANALYTICS & MONITORING (Optional)
# ================================================================
# Google Analytics ID
# VITE_GA_TRACKING_ID=GA-XXXXXXXX-X

# Sentry DSN for error tracking
# VITE_SENTRY_DSN=https://your-sentry-dsn

# Enable error reporting
VITE_ENABLE_ERROR_REPORTING=false

# ================================================================
# DEVELOPMENT ONLY
# ================================================================
# Enable development tools
VITE_ENABLE_DEV_TOOLS=true

# Enable React Query devtools
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Enable detailed error messages
VITE_ENABLE_DETAILED_ERRORS=true

# Mock API responses (for development without backend)
VITE_MOCK_API=false