# ================================================================
# PRODUCTION ENVIRONMENT - BACKEND
# ================================================================
# Production environment variables for deployment on Render
# Set these in Render dashboard environment variables, not in a file

# ================================================================
# DATABASE CONFIGURATION
# ================================================================
MONGODB_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/studymatcher?retryWrites=true&w=majority
DB_NAME=studymatcher

# ================================================================
# AUTHENTICATION & SECURITY
# ================================================================
JWT_SECRET=your-production-jwt-secret-64-chars-long-generate-securely
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_SALT_ROUNDS=12

# ================================================================
# SERVER CONFIGURATION
# ================================================================
NODE_ENV=production
PORT=10000
API_VERSION=v1

# ================================================================
# CORS & FRONTEND CONFIGURATION
# ================================================================
FRONTEND_URL=https://your-frontend-service.onrender.com
ALLOWED_ORIGINS=https://your-frontend-service.onrender.com,https://your-custom-domain.com

# ================================================================
# RATE LIMITING
# ================================================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_WINDOW=15
LOGIN_RATE_LIMIT_MAX_ATTEMPTS=5

# ================================================================
# LOGGING CONFIGURATION
# ================================================================
LOG_LEVEL=warn
LOG_FORMAT=json
ENABLE_REQUEST_LOGGING=true

# ================================================================
# SESSION & COOKIES
# ================================================================
SESSION_SECRET=your-production-session-secret-change-this
COOKIE_SECURE=true
COOKIE_HTTP_ONLY=true
COOKIE_SAME_SITE=strict

# ================================================================
# FEATURE FLAGS
# ================================================================
ENABLE_USER_REGISTRATION=true
ENABLE_STUDY_GROUP_CREATION=true
ENABLE_MATCHING_SERVICE=true
ENABLE_EMAIL_NOTIFICATIONS=false

# ================================================================
# PRODUCTION ONLY
# ================================================================
ENABLE_DETAILED_ERRORS=false
ENABLE_API_DOCS=false
SEED_DATABASE=false